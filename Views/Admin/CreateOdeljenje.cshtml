@model projekatPPP.Models.Odeljenje

@{
    ViewData["Title"] = "Dodaj Odeljenje";
}

<h2>Dodaj novo odeljenje</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateOdeljenje" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Naziv" class="control-label"></label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Razred" class="control-label"></label>
                <input asp-for="Razred" class="form-control" />
                <span asp-validation-for="Razred" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Sačuvaj" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Nazad na Dashboard</a>
            </div>
        </form>
    </div>
</div>