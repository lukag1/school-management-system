@model projekatPPP.Models.ViewModels.EditUserViewModel

@{
    ViewData["Title"] = "Izmeni Korisnika";
}

<h2>Izmeni korisnika</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditUser" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            
            <div class="form-group mb-2">
                <label asp-for="Ime" class="control-label"></label>
                <input asp-for="Ime" class="form-control" />
            </div>
            
            <div class="form-group mb-2">
                <label asp-for="Prezime" class="control-label"></label>
                <input asp-for="Prezime" class="form-control" />
            </div>

            <div class="form-group mb-2">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>

            <div class="form-group mb-2">
                <label asp-for="OdeljenjeId" class="control-label">Odeljenje</label>
                <select asp-for="OdeljenjeId" asp-items="Model.Odeljenja" class="form-control">
                    <option value="">-- Bez odeljenja --</option>
                </select>
            </div>

            <div class="form-group form-check mb-2">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsApproved" /> Odobren
                </label>
            </div>
            
            <br /> 
            <div class="form-group">
                <input type="submit" value="SaÄuvaj izmene" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Nazad na Dashboard</a>
            </div>
        </form>
    </div>
</div>