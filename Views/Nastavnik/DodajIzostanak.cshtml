@model projekatPPP.Models.ViewModels.DodajIzostanakViewModel

@{
    ViewData["Title"] = "Evidentiraj Izostanak";
}

<h2>Evidentiranje izostanka za učenika: @Model.UcenikImePrezime</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="DodajIzostanak" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UcenikId" />

            <div class="form-group mb-3">
                <label asp-for="PredmetId" class="control-label"></label>
                <select asp-for="PredmetId" asp-items="Model.Predmeti" class="form-control">
                    <option value="">-- Izaberi predmet --</option>
                </select>
                <span asp-validation-for="PredmetId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Komentar" class="control-label"></label>
                <textarea asp-for="Komentar" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Komentar" class="text-danger"></span>
            </div>

            <div class="form-group form-check mb-3">
                <input class="form-check-input" type="checkbox" asp-for="Opravdan" />
                <label class="form-check-label" asp-for="Opravdan"></label>
            </div>

            <div class="form-group">
                <input type="submit" value="Sačuvaj izostanak" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Nazad na dashboard</a>
            </div>
        </form>
    </div>
</div>