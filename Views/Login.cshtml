@{
    ViewBag.Title = "Login";
}
<h2>Login</h2>
<form method="post">
    <label>Email:</label>
    <input name="email" /><br />
    <label>Lozinka:</label>
    <input name="lozinka" type="password" /><br />
    <button type="submit">Prijavi se</button>
</form>
@if (ViewBag.Error != null)
{
    <p style="color:red">@ViewBag.Error</p>
}